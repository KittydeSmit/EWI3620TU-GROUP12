package DummyWorld;

import Visualiser.Editor.*;

public class Dummies {
	
	public static void createDummy(World wor, int dim){
		
		switch(dim){
		
		case 1:
			int[][] layer1 = new int[1][1];
			
			for(int i = 0; i < dim; i++){
				for(int j = 0; j < dim; j++){
					layer1[i][j] = 1;
				}
			}
			break;
			
		case 2:
			int[][] layer2 = new int[2][2];
			
			for(int i = 0; i < dim; i++){
				for(int j = 0; j < dim; j++){
					layer2[i][j] = 1;
				}
			}
			break;
			
		case 3:
			int[][] layer3 = new int[3][3];
			
			for(int i = 0; i < dim; i++){
				for(int j = 0; j < dim; j++){
					layer3[i][j] = 1;
				}
			}
			break;
			
		case 4:
			int[][] layer4 = new int[4][4];
			
			for(int i = 0; i < dim; i++){
				for(int j = 0; j < dim; j++){
					layer4[i][j] = 1;
				}
			}
		}
	}

}
